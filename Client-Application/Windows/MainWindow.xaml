<Window x:Class="ClientApplication.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApplication"
        mc:Ignorable="d" d:Height="500" Width="800"
        Title="Paperless-ngx">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Label Content="Paperless-ngx" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"/>
        <Grid HorizontalAlignment="Stretch" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*" MaxWidth="400"/>
            </Grid.ColumnDefinitions>
            <Button Content="Search"/>
            <TextBox Grid.Column="1" HorizontalAlignment="Stretch" MinWidth="100"/>
        </Grid>
        <Menu Grid.Column="2">
            <MenuItem Header="Notifications">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Notifications" Width="200"/>
                    <Button Content="Clear All"/>
                </StackPanel>
                <MenuItem Header="No notifications" IsEnabled="False"/>
            </MenuItem>
            <MenuItem Header="My Profile">
                <MenuItem Header="My profile"/>
                <MenuItem Header="Settings"/>
                <MenuItem Header="Logout"/>
                <Separator/>
                <MenuItem Header="Documentation"/>
            </MenuItem>
        </Menu>
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <Button Content="Dashboard"/>
                    <Button Content="Documents"/>
                    <Separator Visibility="Hidden" Height="40"/>
                </StackPanel>
                <StackPanel Grid.Row="1">
                    <Label Content="MANAGE"/>
                    <Button Content="Correspondents"/>
                    <Button Content="Tags"/>
                    <Button Content="Document Types"/>
                    <Button Content="Storage Paths"/>
                    <Button Content="Custom Fields"/>
                    <Button Content="Saved Views"/>
                    <Button Content="Workflows"/>
                    <Separator Visibility="Hidden" Height="20"/>
                </StackPanel>
                <StackPanel Grid.Row="2">
                    <Label Content="ADMINISTRATION"/>
                    <Button Content="Settings"/>
                    <Button Content="File Tasks"/>
                    <Separator Visibility="Hidden" Height="10"/>
                </StackPanel>
                <StackPanel Grid.Row="3">
                    <Button Content="Documentation"/>
                    <Button Content="Paperless-ngx version"/>
                    <Separator Visibility="Hidden" Height="10"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        <ScrollViewer Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <ContentControl/>
        </ScrollViewer>
    </Grid>
</Window>

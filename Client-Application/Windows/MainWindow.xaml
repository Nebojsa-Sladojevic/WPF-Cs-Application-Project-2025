<Window x:Class="ClientApplication.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApplication"
        mc:Ignorable="d" d:Height="500" Width="800"
        Title="Paperless-ngx" Background="{StaticResource BackgroundColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.ColumnSpan="3" Fill="{StaticResource AccentColor}"/>
        <Rectangle Grid.Row="1" Fill="{StaticResource BackgroundLightColor}"/>
        <TextBlock Text="Paperless-ngx" Style="{StaticResource TitleText}" VerticalAlignment="Center" Padding="10"/>
        <Grid HorizontalAlignment="Stretch" Grid.Column="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*" MaxWidth="400"/>
            </Grid.ColumnDefinitions>
            <Button Content="Search" Margin="0"/>
            <TextBox Grid.Column="1" HorizontalAlignment="Stretch" MinWidth="100" Margin="0" VerticalContentAlignment="Center"/>
        </Grid>
        <Menu Grid.Column="2" Padding="10">
            <MenuItem Header="Notifications">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Notifications" Width="200"/>
                    <Button Content="Clear All"/>
                </StackPanel>
                <MenuItem Header="No notifications" IsEnabled="False"/>
            </MenuItem>
            <MenuItem Header="My Profile">
                <MenuItem Header="My profile"/>
                <MenuItem Header="Settings"/>
                <MenuItem Header="Logout"/>
                <Separator/>
                <MenuItem Header="Documentation"/>
            </MenuItem>
        </Menu>
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Padding="10">
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <Button Content="Dashboard" Style="{StaticResource NavigationPaneButton}"/>
                    <Button Content="Documents" Style="{StaticResource NavigationPaneButton}" Tag="DocumentsView" Click="SelectTab"/>
                    <Separator Visibility="Hidden" Height="40"/>
                </StackPanel>
                <StackPanel Grid.Row="1">
                    <TextBlock Text="MANAGE" Style="{StaticResource NavigationPaneText}"/>
                    <Button Content="Correspondents" Style="{StaticResource NavigationPaneButton}"/>
                    <Button Content="Tags" Style="{StaticResource NavigationPaneButton}"/>
                    <Button Content="Document Types" Style="{StaticResource NavigationPaneButton}"/>
                    <Button Content="Storage Paths" Style="{StaticResource NavigationPaneButton}"/>
                    <Button Content="Custom Fields" Style="{StaticResource NavigationPaneButton}"/>
                    <Button Content="Saved Views" Style="{StaticResource NavigationPaneButton}"/>
                    <Button Content="Workflows" Style="{StaticResource NavigationPaneButton}"/>
                    <Separator Visibility="Hidden" Height="20"/>
                </StackPanel>
                <StackPanel Grid.Row="2">
                    <TextBlock Text="ADMINISTRATION" Style="{StaticResource NavigationPaneText}"/>
                    <Button Content="Settings" Style="{StaticResource NavigationPaneButton}"/>
                    <Button Content="File Tasks" Style="{StaticResource NavigationPaneButton}"/>
                    <Separator Visibility="Hidden" Height="10"/>
                </StackPanel>
                <StackPanel Grid.Row="3">
                    <Button Content="Documentation" Style="{StaticResource NavigationPaneButton}"/>
                    <Button Content="Paperless-ngx version" Style="{StaticResource NavigationPaneButton}"/>
                    <Separator Visibility="Hidden" Height="10"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        <ScrollViewer Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Padding="10">
            <ContentControl x:Name="TabContent"/>
        </ScrollViewer>
    </Grid>
</Window>

<UserControl x:Class="ClientApplication.Panels.DocumentsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientApplication.Panels"
             xmlns:customUI="clr-namespace:ClientApplication.CustomUI"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="1000">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Label Content="Documents" FontSize="20" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="0,0,0,10">
                <Menu>
                    <MenuItem Header="Select">
                        <MenuItem Header="Select none"/>
                        <MenuItem Header="Select page"/>
                        <MenuItem Header="Select all"/>
                    </MenuItem>
                </Menu>
                <Menu>
                    <MenuItem Header="Show">
                        <CheckBox IsChecked="True" Content="Title"/>
                        <CheckBox IsChecked="True" Content="Created"/>
                        <CheckBox IsChecked="False" Content="Added"/>
                        <CheckBox IsChecked="True" Content="Tags"/>
                        <CheckBox IsChecked="True" Content="Correspondent"/>
                        <CheckBox IsChecked="True" Content="Document type"/>
                        <CheckBox IsChecked="True" Content="Storag path"/>
                        <CheckBox IsChecked="True" Content="Notes"/>
                        <CheckBox IsChecked="True" Content="Shared"/>
                        <CheckBox IsChecked="True" Content="ASN"/>
                        <CheckBox IsChecked="True" Content="Pages"/>
                    </MenuItem>
                </Menu>
                <customUI:ButtonsGroup Margin="4,0">
                    <RadioButton GroupName="ViewDocuments" Content="List" BorderThickness="1,1,0,1"/>
                    <RadioButton GroupName="ViewDocuments" Content="Grid" BorderThickness="1,1,0,1" IsChecked="True"/>
                    <RadioButton GroupName="ViewDocuments" Content="Tiles" BorderThickness="1,1,1,1"/>
                </customUI:ButtonsGroup>
                <Menu>
                    <MenuItem Header="Sort">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton GroupName="SortOrder" Content="A to Z"/>
                            <Separator Width="20" Visibility="Hidden"/>
                            <RadioButton GroupName="SortOrder" Content="Z to A" IsChecked="True"/>
                        </StackPanel>
                        <MenuItem Header="ASN"/>
                        <MenuItem Header="Correspondent"/>
                        <MenuItem Header="Title"/>
                        <MenuItem Header="Document type"/>
                        <MenuItem Header="Created"/>
                        <MenuItem Header="Added"/>
                        <MenuItem Header="Modified"/>
                        <MenuItem Header="Notes"/>
                        <MenuItem Header="Pages"/>
                    </MenuItem>
                </Menu>
                <Menu>
                    <MenuItem Header="Views">
                        <MenuItem Header="All saved views"/>
                    </MenuItem>
                </Menu>
            </StackPanel>
        </Grid>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <ComboBox>
                <ComboBoxItem Content="Title"/>
                <ComboBoxItem Content="Title &amp; content" IsSelected="True"/>
                <ComboBoxItem Content="ASN"/>
                <ComboBoxItem Content="Custom fields"/>
                <ComboBoxItem Content="File type"/>
                <ComboBoxItem Content="Advanced search"/>
            </ComboBox>
            <TextBox Grid.Column="1" Margin="0,0,10,0" BorderThickness="0,1,1,1"/>
            <StackPanel Orientation="Horizontal" Grid.Column="2">
                <Menu>
                    <MenuItem Header="Tags">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton GroupName="Tags" Content="All" IsChecked="True"/>
                            <RadioButton GroupName="Tags" Content="Any"/>
                        </StackPanel>
                        <TextBox Width="200"/>
                    </MenuItem>
                </Menu>
                <Menu>
                    <MenuItem Header="Correspondent">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton GroupName="Correspondents" Content="Include" IsChecked="True"/>
                            <RadioButton GroupName="Correspondents" Content="Exclude"/>
                        </StackPanel>
                        <TextBox Width="200"/>
                    </MenuItem>
                </Menu>
                <Menu>
                    <MenuItem Header="Document type">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton GroupName="DocumentTypes" Content="Include" IsChecked="True"/>
                            <RadioButton GroupName="DocumentTypes" Content="Exclude"/>
                        </StackPanel>
                        <TextBox Width="200"/>
                    </MenuItem>
                </Menu>
                <Menu>
                    <MenuItem Header="Storage path">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton GroupName="StoragePaths" Content="Include" IsChecked="True"/>
                            <RadioButton GroupName="StoragePaths" Content="Exclude"/>
                        </StackPanel>
                        <TextBox Width="200"/>
                    </MenuItem>
                </Menu>
                <Menu>
                    <MenuItem Header="Dates">
                        <TextBlock Text="Created"/>
                        <Separator/>
                        <ComboBox Width="110">
                            <ComboBoxItem Content="Within 1 week"/>
                            <ComboBoxItem Content="Within 1 month"/>
                            <ComboBoxItem Content="Within 3 months"/>
                            <ComboBoxItem Content="Within 1 year"/>
                            <ComboBoxItem Content="This year"/>
                            <ComboBoxItem Content="This month"/>
                            <ComboBoxItem Content="Today"/>
                            <ComboBoxItem Content="Yesterday"/>
                        </ComboBox>
                        <Separator/>
                        <MenuItem>
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="From" Width="100"/>
                                    <TextBox Text="mm/dd/yyyy" Width="150"/>
                                    <Button Content="Calendar" Width="50"/>
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                        <Separator/>
                        <MenuItem>
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="To" Width="100"/>
                                    <TextBox Text="mm/dd/yyyy" Width="150"/>
                                    <Button Content="Calendar" Width="50"/>
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                        <TextBlock Text="Added"/>
                        <Separator/>
                        <ComboBox Width="110">
                            <ComboBoxItem Content="Within 1 week"/>
                            <ComboBoxItem Content="Within 1 month"/>
                            <ComboBoxItem Content="Within 3 months"/>
                            <ComboBoxItem Content="Within 1 year"/>
                            <ComboBoxItem Content="This year"/>
                            <ComboBoxItem Content="This month"/>
                            <ComboBoxItem Content="Today"/>
                            <ComboBoxItem Content="Yesterday"/>
                        </ComboBox>
                        <Separator/>
                        <MenuItem>
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="From" Width="100"/>
                                    <TextBox Text="mm/dd/yyyy" Width="150"/>
                                    <Button Content="Calendar" Width="50"/>
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                        <Separator/>
                        <MenuItem>
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="To" Width="100"/>
                                    <TextBox Text="mm/dd/yyyy" Width="150"/>
                                    <Button Content="Calendar" Width="50"/>
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                    </MenuItem>
                </Menu>
                <Menu>
                    <MenuItem Header="Permissions">
                        <MenuItem IsCheckable="True" Header="All" IsChecked="True"/>
                        <MenuItem IsCheckable="True" Header="My documents"/>
                        <MenuItem IsCheckable="True" Header="Shared with me"/>
                        <MenuItem IsCheckable="True" Header="Shared by me"/>
                        <MenuItem IsCheckable="True" Header="Unowned"/>
                        <MenuItem IsCheckable="True" Header="Hide unowned"/>
                    </MenuItem>
                </Menu>
                <Button Content="Reset flter" Margin="14,0,4,0"/>
            </StackPanel>
        </Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        </ScrollViewer>
    </DockPanel>
</UserControl>
